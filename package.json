{
  "name": "hemmo-backend",
  "author": "Futurice",
  "description": "Backend for Hemmo project",
  "license": "MIT",
  "bugs": "https://github.com/Futurice/hemmo-backend",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Futurice/hemmo-backend.git"
  },
  "engines": {
    "node": "6.2.0"
  },
  "keywords": [
    "Node",
    "Postgres",
    "Knex",
    "Jest"
  ],
  "scripts": {
    "start": "npm run build && node dist/backend_kit.js",
    "build": "mkdir -p dist && babel src --out-dir dist --source-maps",
    "watch": "NODE_ENV=development nodemon --exec babel-node src/backend_kit.js",
    "register:admin": "babel-node bin/register_admin.js",
    "lint": "eslint src/",
    "lint:fix": "eslint --fix src/",
    "precommit": "lint-staged",
    "prettier": "prettier --single-quote --trailing-comma all --write \"{,!(node_modules)/**/}*.js\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "db:migrate": "babel-node node_modules/.bin/knex --knexfile db/knexfile.js migrate:latest",
    "db:rollback": "babel-node node_modules/.bin/knex --knexfile db/knexfile.js migrate:rollback",
    "db:seed": "babel-node node_modules/.bin/knex --knexfile db/knexfile.js seed:run",
    "db:wipe": "babel-node bin/wipe_db.js",
    "db:init": "npm run db:wipe && npm run db:migrate && npm run db:seed"
  },
  "lint-staged": {
    "*.js": [
      "prettier --single-quote --trailing-comma all --write",
      "git add"
    ]
  },
  "version": "0.0.1",
  "main": "src/server.js",
  "private": true,
  "dependencies": {
    "babel-cli": "^6.10.1",
    "babel-core": "^6.9.1",
    "babel-polyfill": "^6.23.0",
    "babel-preset-es2015-node": "^6.1.1",
    "babel-preset-stage-0": "^6.22.0",
    "bcryptjs": "^2.4.3",
    "bluebird": "^3.4.1",
    "boom": "^5.1.0",
    "dotenv": "^4.0.0",
    "emailjs": "^1.0.10",
    "faker": "^4.1.0",
    "fs-sync": "^1.0.2",
    "glue": "^4.1.0",
    "good": "^7.0.1",
    "good-console": "^6.1.2",
    "good-squeeze": "^5.0.1",
    "hapi": "^16.1.0",
    "hapi-auth-jwt2": "^7.0.1",
    "hapi-qs": "^1.1.3",
    "hapi-routes-recursive": "^3.0.0",
    "hoek": "^4.1.0",
    "jimp": "^0.2.27",
    "joi": "^10.2.2",
    "jsonwebtoken": "^7.3.0",
    "knex": "^0.13.0",
    "lodash": "^4.13.1",
    "mkdirp": "^0.5.1",
    "moment": "^2.18.1",
    "node-schedule": "^1.2.3",
    "pg": "^6.1.2",
    "prompt": "^1.0.0",
    "simple-fixtures": "^1.0.1",
    "uuid": "^3.1.0",
    "white-out": "^2.0.0"
  },
  "devDependencies": {
    "babel-jest": "^20.0.3",
    "chokidar-cli": "^1.2.0",
    "code": "^4.0.0",
    "eslint": "^3.19.0",
    "eslint-config-airbnb": "^15.0.2",
    "eslint-config-prettier": "^2.3.0",
    "eslint-plugin-import": "^2.6.1",
    "eslint-plugin-jsx-a11y": "^5.1.1",
    "eslint-plugin-react": "^7.1.0",
    "husky": "^0.14.3",
    "jest": "^20.0.4",
    "lab": "^14.1.0",
    "lab-babel": "^1.1.1",
    "lint-staged": "^4.0.1",
    "mock-knex": "^0.3.7",
    "nodemon": "^1.9.2",
    "prettier": "^1.5.3"
  }
}
