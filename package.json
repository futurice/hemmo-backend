{
  "name": "PepperoniApiTemplate",
  "author": "Futurice",
  "description": "Node Api Starter Kit for Backend",
  "license": "MIT",
  "homepage": "http://getpepperoni.com",
  "bugs": "https://github.com/futurice/pepperoni-api-kit/issues",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/futurice/pepperoni-api-kit.git"
  },
  "engines": {
    "node": "6.2.0"
  },
  "keywords": [
    "Node",
    "Postgres",
    "Auth0",
    "Knex",
    "Jest"
  ],
  "scripts": {
    "start": "npm run build && node dist/hemmo-backend.js",
    "postinstall": "npm run build",
    "build": "mkdir -p dist && babel bin src --out-dir dist --source-maps",
    "watch": "NODE_ENV=development nodemon --exec babel-node bin/hemmo-backend.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "db:init": "knex migrate:latest",
    "db:seed": "knex seed:run",
    "db:migrate": "knex migrate:latest",
    "db:rollback": "knex migrate:rollback"
  },
  "version": "0.0.1",
  "main": "src/server.js",
  "private": true,
  "dependencies": {
    "babel-cli": "^6.10.1",
    "babel-core": "^6.9.1",
    "babel-plugin-transform-object-rest-spread": "^6.8.0",
    "babel-preset-es2015": "^6.16.0",
    "babel-preset-node6": "^11.0.0",
    "bcrypt": "^0.8.7",
    "bluebird": "^3.4.1",
    "boom": "^3.2.2",
    "dotenv": "^2.0.0",
    "emailjs": "^1.0.8",
    "fs-sync": "^1.0.2",
    "good": "^7.0.1",
    "good-console": "^6.1.2",
    "good-squeeze": "^4.0.0",
    "hapi": "^13.4.1",
    "hapi-auth-jwt2": "^7.0.1",
    "hoek": "^4.1.0",
    "inert": "^4.0.1",
    "joi": "^8.4.2",
    "knex": "^0.11.5",
    "lodash": "^4.13.1",
    "mkdirp": "^0.5.1",
    "node-schedule": "^1.2.0",
    "node-uuid": "^1.4.7",
    "pg": "^5.0.0",
    "prompt": "^1.0.0"
  },
  "devDependencies": {
    "babel-jest": "^16.0.0",
    "babel-plugin-module-resolver": "^2.2.0",
    "babel-polyfill": "^6.16.0",
    "chokidar-cli": "^1.2.0",
    "code": "^3.0.1",
    "eslint": "^2.11.1",
    "fixture-factory": "^1.5.1",
    "jest": "^16.0.2",
    "lab": "^10.8.2",
    "lab-babel": "^1.1.1",
    "mock-knex": "^0.3.7",
    "nodemon": "^1.9.2"
  }
}
